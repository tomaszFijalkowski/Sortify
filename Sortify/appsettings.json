{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "logfileInfo": {
        "type": "File",
        "fileName": "Logs/Info/info-${shortdate}.log",
        "maxArchiveDays": 14
      },
      "logfileError": {
        "type": "File",
        "fileName": "Logs/Error/error-${shortdate}.log",
        "maxArchiveDays": 14
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfileInfo"
      },
      {
        "logger": "*",
        "minLevel": "Error",
        "writeTo": "logfileError"
      }
    ]
  },
  "AllowedHosts": "*"
}
