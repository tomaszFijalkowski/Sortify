{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "logfileInfo": {
        "type": "File",
        "fileName": "Logs/Info/info-${shortdate}.log",
        "layout": "${longdate} ${message} ${exception:format=tostring}",
        "maxArchiveDays": 14
      },
      "logfileError": {
        "type": "File",
        "fileName": "Logs/Error/error-${shortdate}.log",
        "layout": "${longdate} ${message} ${exception:format=tostring}",
        "maxArchiveDays": 14
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfileInfo"
      },
      {
        "logger": "*",
        "minLevel": "Warning",
        "writeTo": "logfileError"
      }
    ]
  },
  "AllowedHosts": "*",
  "AuthConfig": {
    "LoginUrl": "",
    "RedirectUri": "",
    "ClientId": "",
    "ClientScope": ""
  }
}
